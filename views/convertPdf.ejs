<h3>SALES REPORT</h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">SL.NO</th>
      <th scope="col">USER</th>
      <th scope="col">PRODUCT</th>
      <th scope="col">QUANTITY</th>
      <th scope="col">TOTAL PRICE</th>
      <th scope="col">DISCOUNT</th>
      <th scope="col">COUPON DEDUCTION</th>
      <th scope="col">PAYMENT TYPE</th>
      <th scope="col">STATUS</th>
    </tr>
  </thead>
  <tbody>
    <% todaysOrders.forEach((order, index) => { %> <%
    order.productDetails.forEach((product, productIndex) => { %>
    <p><%=order%></p>
    <tr>
      <td><%= productIndex === 0 ? index + 1 : '' %></td>
      <td><%= productIndex === 0 ? order.user.name : '' %></td>
      <td><%= product.name %></td>
      <td><%= order.item[productIndex].quantity %></td>
      <td>
        <%= order.item[productIndex].quantity * order.item[productIndex].price
        %>
      </td>
      <td><%= productIndex === 0 ? order.discount.toFixed(2) : '' %></td>
      <td><%= productIndex === 0 ? order.couponDeduction.toFixed(2) : '' %></td>
      <td><%= productIndex === 0 ? order.paymentType : '' %></td>
      <td><%= productIndex === 0 ? order.orderStatus : '' %></td>
    </tr>
    <% }) %> <% }) %>
  </tbody>
</table>
